#:import get_color_from_hex kivy.utils.get_color_from_hex
#:set pad_value_large 10
#:set pad_value_small 5


#Colours

#:set deep_blue get_color_from_hex(app.get_primary_deep())
#:set medium_blue get_color_from_hex(app.get_primary_medium())
#:set light_blue get_color_from_hex(app.get_primary_light())
#:set white_shade get_color_from_hex(app.get_primary_neutral())
#:set v_dark_grey get_color_from_hex(app.get_primary_dark())
#:set medium_grey get_color_from_hex(app.get_aux_dark())
#:set cloudy get_color_from_hex(app.get_aux_neutral())
#:set dark_purple get_color_from_hex(app.get_aux_deep())



#Padding fix required for EditingGrid

#Padding doesn't decrease widget size (Bounding Box)


<TabText@TextInput>:
    write_tab: False

<EditingL@Label>:
    size_hint_x: None
    width: 125

<TopMenuBut@Button>:
    size_hint_max_x: 80
    font_size: 13
    color: 1, 1, 1, 1
    background_color: v_dark_grey
    background_normal: ""

<FreqButtons@Button>:
    font_size: 13
    size_hint_max_x: 90
    background_normal: ""
    background_color: medium_grey

<InfoButtons@Button>:
    background_color: v_dark_grey
    background_normal: ""
    text: "Info"

RootScreen:
    id: root_wid
    orientation: "vertical"
    TopMenu:
        size_hint_y: 0.025
        canvas.before:
            Color:
                rgba: v_dark_grey
            Rectangle:
                pos: self.pos
                size: self.size

    Frequent:
        size_hint_y: 0.025
        canvas.before:
            Color:
                rgba: medium_grey
            Rectangle:
                pos: self.pos
                size: self.size
        FreqButtons:
            text: "New"
        FreqButtons:
            text: "Copy"
        FreqButtons:
            text: "Delete"
        FreqButtons:
            text: "Renum"
        FreqButtons:
            text: "Find"
        FreqButtons:
            text: "Network"
        FreqButtons:
            text: "Format"
        FreqButtons:
            text: "<---"
            on_press: screen_manager.current = 'edit'
        FreqButtons:
            text: "--->"
            on_press: screen_manager.current = 'stats'

    ScreenManager:
        id: screen_manager
        size_hint_y: 0.925
        Screen:
            name: "edit"
            BoxLayout:
                spacing: 20
                #Main screen container
                canvas.before:
                    Color:
                        rgba: dark_purple
                    Rectangle:
                        pos: self.pos
                        size: self.size
                padding: 20
                BoxLayout:
                    #Left hand side container
                    size_hint_x: 0.2
                    orientation: "vertical"
                    canvas.before:
                        Color:
                            rgba: medium_blue
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    BoxLayout:
                        orientation: 'vertical'
                        NetworkQueueHeader:
                            size_hint_y: 0.05

                        NetworkQueueScroll:
                            canvas.before:
                                Color:
                                    rgba: v_dark_grey
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                            size_hint_y: 0.9
                            bar_width: 10
                            scroll_type: ['bars']
                            NetworkQueue:
                                spacing: 1
                                cols: 2
                                size_hint_y: None
                                height: self.minimum_height
                        NetworkCommands:
                            size_hint_y: 0.05

                BoxLayout:
                    #Middle/Editing Container
                    size_hint_x: 0.8
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint_y: 0.6
                        orientation: 'vertical'
                        EditingGridHeader:
                            size_hint_y: 0.1

                        EditingGridScroll:
                            size_hint_y: 0.8
                            bar_width: 10
                            scroll_type: ['bars']
                            EditingGrid:
                                spacing: 1
                                id: file_grid
                                size_hint_y: None
                                height: self.minimum_height
                        EditingGridCommands:
                            size_hint_y: 0.1
                            editing_grid: file_grid
                    UserInput:
                        size_hint_y: 0.4
                        path_name: file_grid._sel_file
                        editing_grid: file_grid
        Screen:
            name: 'stats'
            BoxLayout:
                orientation: 'vertical'
                Misc:
                    size_hint_y: 0.2
                    Slider:
                        min: 1
                        max: 100
                        value: 12
                        step: 1
                        on_touch_move: for widget in stat_grid.children: widget.font_size = self.value
                    Button:
                        text: "Get selected file stats."
                        on_press: stat_grid.get_stats()
                StatsGrid:
                    id: stat_grid
                    sel_file_stats: file_grid._sel_file
                    cols: 4
                    size_hint_y: 0.8

    BoxLayout:
        size_hint_y: 0.025
        InfoButtons:
        InfoButtons:
        InfoButtons:
        InfoButtons:



<TopMenu>:
    TopMenuBut:
        text: "File"
    TopMenuBut:
        text: "Edit"
    TopMenuBut:
        text: "View"
    TopMenuBut:
        text: "Tools"
    TopMenuBut:
        text: "Help"


<Frequent>:


<NetworkQueueHeader>:
    canvas.before:
        Color:
            rgba: v_dark_grey
        Rectangle:
            pos: self.pos
            size: self.size

<NetworkCommands>:
    Button:
        text: "Send"
        background_color: deep_blue
        background_normal: ""

    Button:
        text: "Log"
        background_color: deep_blue
        background_normal: ""
        on_press: root.display_log()


<EditingGridHeader>:
    canvas.before:
        Color:
            rgba: v_dark_grey
        Rectangle:
            pos: self.pos
            size: self.size


<EditingGrid>:
    cols: 7
    canvas.before:
        Color:
            rgba: v_dark_grey
        Rectangle:
            pos: self.pos
            size: self.size

<EditingGridCommands>:
    spacing: 2
    canvas.before:
        Color:
            rgba: v_dark_grey
        Rectangle:
            pos: self.pos
            size: self.size
    Button:
        text: "Clear grid"
        background_color: deep_blue
        background_normal: ''
        on_press: root.clear_grid()
    Button:
        background_color: deep_blue
        background_normal: ''
        text: "Reshuffle"
        on_press: root.reshuffle()



<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            multiselect: True
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)


<UserInput>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: v_dark_grey
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint_y: 0.85
        orientation: 'vertical'
        BoxLayout:
            TabText:
                id: rename
                hint_text: "Enter filename here."
            TabText:
                id: note
                hint_text: "Note"
                input_filter: lambda text, from_undo: text[:34 - len(self.text)]
        BoxLayout:
            TabText:
                id: title
                hint_text: "Title"
                input_filter: lambda text, from_undo: text[:43 - len(self.text)]
            TabText:
                id: artist
                hint_text: "Artist"
                input_filter: lambda text, from_undo: text[:34 - len(self.text)]
        BoxLayout:
            TabText:
                id: audio_id
                hint_text: "ID"
                input_filter: lambda text, from_undo: text[:4 - len(self.text)]
            TabText:
                id: yr
                hint_text: "Year"
                input_filter: lambda text, from_undo: text[:4 - len(self.text)]
            TabText:
                id: ending
                hint_text: "Ending"
                input_filter: lambda text, from_undo: text[:1 - len(self.text)]
            TabText:
                id: intro
                hint_text: "Intro"
                input_filter: lambda text, from_undo: text[:2 - len(self.text)]
            TabText:
                id: eom
                hint_text: "EOM"
                input_filter: lambda text, from_undo: text[:6 - len(self.text)]

        BoxLayout:
            TabText:
                id: s_date
                hint_text: "Start Date"
                input_filter: lambda text, from_undo: text[:6 - len(self.text)]

            TabText:
                id: s_hour
                hint_text: "Start Hour"
                input_filter: lambda text, from_undo: text[:1 - len(self.text)]
            TabText:
                hint_text: "Beginning of Audio"

        BoxLayout:
            TabText:
                id: e_date
                hint_text: "End Date"
                input_filter: lambda text, from_undo: text[:6 - len(self.text)]
            TabText:
                id: e_hour
                hint_text: "End Hour"
                input_filter: lambda text, from_undo: text[:1 - len(self.text)]
            TabText:
                hint_text: "End of Audio"
    GridLayout:
        size_hint_y: 0.15
        canvas.before:
            Color:
                rgba: cloudy
            Rectangle:
                pos: self.pos
                size: self.size

        cols: 4
        spacing: 10
        Button:
            size_hint_x: None
            width: 100
            text: "Play"
            background_color: deep_blue
            background_normal: ""
            on_press: root.play(root.path_name)
        ProgressBar:
            id: p_bar
            value: 0
        Slider:
            size_hint_x: None
            width: 100
            id: volume_slider
            min: 0
            max: 1
            value: 1
            step: 0.01
            value_track: True
            value_track_color: 0, 1, 1, 1
            on_touch_move: root.update_volume(self.value)
        Button:
            text: "Save"
            size_hint_x: None
            width: 100
            background_color: deep_blue
            background_normal: ""
            on_press: root.edit_scot(root.path_name, note.text, title.text, artist.text, audio_id.text, year.text, ending.text, intro.text, eom.text, s_date.text, e_date.text, s_hour.text, e_hour.text, rename = rename.text)


<Misc>:
    orientation: 'vertical'
    Label:
        text: "Font size"
