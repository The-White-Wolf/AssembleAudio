
<GridButton@Button>:
    text: ""

<TopMenu@Button>:
    background_color: 0.96, 0.96, 0.96, 1

<FreqButtons@Button>:
    background_color: 0, 0.9, 0, 1

<InfoButtons@Button>:
    background_color: 0, 0.3, 0, 1
    text: "Info"

<RootWidget>:
    id: root_wid
    orientation: "vertical"
    BoxLayout:
        size_hint_y: None
        size: root.width, root.height / 30
        TopMenu:
            text: "File"
        TopMenu:
            text: "Edit"
        TopMenu:
            text: "View"
        Button:
            color: 0, 0, 0, 1
            background_normal: ""
            background_color: 0.93, 0.93, 0.93, 1
            text: "Tools"
            border: 10, 10, 10, 10
        TopMenu:
            text: "Help"

    BoxLayout:
        size_hint_y: None
        size: root.width, root.height / 20
        FreqButtons:
            text: "New"
        FreqButtons:
            text: "Copy"
        FreqButtons:
            text: "Delete"
        FreqButtons:
            text: "Renum"
        FreqButtons:
            text: "Find"
        FreqButtons:
            text: "Network"
        FreqButtons:
            text: "Format"
    BoxLayout:
        BoxLayout:
            size_hint_x: None
            size: root.width / 5, root.height
            orientation: "vertical"
            Button:
                background_color: 0, 0.7, 0, 1
                text: "Files/Directories"
            Button:
                background_color: 0, 0.7, 0, 1
                text: "Network queue"
        BoxLayout:
            orientation: "vertical"
            GridFile:
                cols: 5
                size_hint_y: None
                size: root.width, root.height / 10 * 4

                #Would want this to be more dynamic
                Label:
                    text: "Title"
                Label:
                    text: "Artist"
                Label:
                    text: "End Date"
                Label:
                    text: "Filename"
                Label:
                    text: "Type"
                GridButton:
                GridButton:
                GridButton:
                GridButton:
                GridButton:
                GridButton:
                GridButton:
                GridButton:
                GridButton:
                GridButton:
                GridButton:
                GridButton:
                GridButton:
                GridButton:
                GridButton:

            GridLayout:
                cols: 4
                #cols_minimum: {0: 1000, 2: 1, 3: 1}
                background_color: 0, 0.5, 0, 1
                Label:
                    text: "Filename"

                TextInput:
                    id: f_name
                    hint_text: "Enter filename here."
                Label:
                    text: "Title"
                TextInput:
                    id: title
                    hint_text: "Enter title here."
                    input_filter: lambda text, from_undo: text[:43 - len(self.text)]
                Label:
                    text: "Year"
                TextInput:
                    id: yr
                    hint_text: "Unknown format."
                    input_filter: lambda text, from_undo: text[:4 - len(self.text)]
                Label:
                    text: "Artist"
                TextInput:
                    id: artist
                    hint_text: "Enter artist name here."
                    input_filter: lambda text, from_undo: text[:34 - len(self.text)]
                Label:
                    text: "Ending"
                TextInput:
                    id: ending
                    hint_text: "Unknown format."
                    input_filter: lambda text, from_undo: text[:1 - len(self.text)]
                Label:
                    text: "Note"
                TextInput:
                    id: note
                    hint_text: "Extras"
                    input_filter: lambda text, from_undo: text[:34 - len(self.text)]
                Label:
                    text: "Start Date:"
                TextInput:
                    hint_text: "21/06/2017"
                Label:
                    text: "End Date:"
                TextInput:
                    hint_text: "23/06/2017"
                Label:
                    text: "Start hour"
                TextInput:
                    hint_text: "00:00:00"
                Label:
                    text: "End Hour"
                TextInput:
                    hint_text: "00:59:59"
                Label:
                    text: "Begin of Audio:"
                TextInput:
                    hint_text: "00:00:00.000"
                Label:
                    text: "End of Audio:"
                TextInput:
                    hint_text: "00:00:00.000"
                Button:
                    text: "Play"
                Label:
                    text: "Set EOM"
                TextInput:
                    hint_text: "00.0"
                Button:
                    text: "Save"
                    on_press: root_wid.gib_args(f_name.text, title.text, yr.text, artist.text, ending.text, note.text)



    BoxLayout:
        size_hint_y: None
        size: root.width, root.height / 30

        InfoButtons:
        InfoButtons:
        InfoButtons:
        InfoButtons:



<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
